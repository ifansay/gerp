generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["tracing", "views", "relationJoins", "metrics"]
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  directUrl         = env("DIRECT_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator erd {
  provider     = "prisma-erd-generator"
  ignoreTables = ["_prisma_migrations", "Session", "Account", "Example"]
  disabled     = true
  ignoreEnums  = true
  output       = "database.svg"
}

model e_listing_manager {
  id              Int       @id @default(autoincrement())
  listing_id      e_listing @relation(references: [id])
  manager_id      Int
  manager_user_id Int
}

model e_listing {
  id                 Int                 @id @default(autoincrement())
  platform_code      String
  country_code       String
  market_id          Int
  e_listing_managers e_listing_manager[]
}

model e_market_polymerize {
  id            Int    @id @default(autoincrement())
  platform_code String
  country_name  String
  platform_name String
  market_name   String
  seller_id     String
  shop_name     String
  country_code  String
  market_id     String
}

model user {
  id        Int    @id @default(autoincrement())
  loginname String
  name      String
}

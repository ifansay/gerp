generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  directUrl         = env("DIRECT_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator erd {
  provider     = "prisma-erd-generator"
  ignoreTables = ["_prisma_migrations", "Session", "Account", "Example"]
  disabled     = false
  ignoreEnums  = true
  output       = "database.svg"
}

/// 销售负责人
model e_listing_manager {
  id              Int       @id @default(autoincrement())
  listing_id      Int
  manager_id      Int
  manager_user_id Int
  listing         e_listing @relation(fields: [listing_id], references: [id])
  user            user      @relation(fields: [manager_user_id], references: [id])
}

/// 全平台商品
model e_listing {
  id                 Int                 @id @default(autoincrement())
  platform_code      String
  country_code       String
  market_id          Int
  market             e_market_polymerize @relation(fields: [market_id], references: [id])
  e_listing_managers e_listing_manager[]
}

/// 用户
model user {
  id                 Int                 @id @default(autoincrement())
  loginname          String
  name               String
  e_listing_managers e_listing_manager[]
}

/// 全平台店铺
model e_market_polymerize {
  id            Int         @id @default(autoincrement())
  platform_code String?
  country_name  String?
  platform_name String?
  market_name   String?
  market_id     String?
  e_listings    e_listing[]
}
